@model ASM_WebBanNuocUong.Models.SanPham

<div class="container mt-5">
    <div class="card border-0 shadow-lg rounded-4 overflow-hidden">
        <div class="row g-0">
            <div class="col-md-5">
                <!-- Sửa đường dẫn ảnh với ~/img/ -->
                <img src="@Url.Content("~/img/" + Model.HinhAnh)" 
                     class="img-fluid h-100 w-100 object-fit-cover shadow-sm" 
                     style="min-height: 400px;"
                     onerror="this.src='@Url.Content("~/img/demo.png")'"
                     alt="@Model.TenSanPham">
            </div>
            <div class="col-md-7">
                <div class="card-body p-5">
                    <nav aria-label="breadcrumb">
                        <ol class="breadcrumb small text-uppercase fw-bold">
                            <li class="breadcrumb-item"><a asp-action="Index" class="text-decoration-none text-muted">Sản phẩm</a></li>
                            <li class="breadcrumb-item active text-primary">Chi tiết</li>
                        </ol>
                    </nav>
                    
                    <h2 class="display-5 fw-bold text-dark">@Model.TenSanPham</h2>
                    <p class="text-muted border-start border-4 border-primary ps-3 mb-4">@Model.MoTa</p>
                    
                    <div class="mb-4">
                        <span class="fs-1 fw-bold text-danger">@Model.Gia.ToString("N0") đ</span>
                        <span class="badge bg-light text-dark border ms-3 px-3 py-2 rounded-pill">Loại: @Model.DanhMuc?.TenDanhMuc</span>
                    </div>

                    <div class="row bg-light rounded-4 p-3 mb-4 g-2">
                        <div class="col-6">
                            <small class="text-muted d-block">Mã sản phẩm</small>
                            <span class="fw-bold">@Model.MaSanPham.ToString().Substring(0,8)...</span>
                        </div>
                        <div class="col-6">
                            <small class="text-muted d-block">Số lượng tồn kho</small>
                            <div class="d-flex align-items-center">
                                @if (Model.SoLuongTon > 0)
                                {
                                    <span class="badge bg-success rounded-pill px-3 py-2 fw-bold me-2">
                                        <i class="fas fa-box me-1"></i>@Model.SoLuongTon
                                    </span>
                                    <small class="text-success">
                                        <i class="fas fa-check-circle me-1"></i>Còn hàng
                                    </small>
                                }
                                else
                                {
                                    <span class="badge bg-danger rounded-pill px-3 py-2 fw-bold me-2">
                                        <i class="fas fa-exclamation-circle me-1"></i>@Model.SoLuongTon
                                    </span>
                                    <small class="text-danger">
                                        <i class="fas fa-times-circle me-1"></i>Hết hàng
                                    </small>
                                }
                            </div>
                        </div>
                        <div class="col-6">
                            <small class="text-muted d-block">Trạng thái</small>
                            @if (Model.TrangThai)
                            {
                                <span class="badge bg-success rounded-pill px-3 py-1">
                                    <i class="fas fa-check me-1"></i>Đang bán
                                </span>
                            }
                            else
                            {
                                <span class="badge bg-secondary rounded-pill px-3 py-1">
                                    <i class="fas fa-pause me-1"></i>Ngừng bán
                                </span>
                            }
                        </div>
                        <div class="col-6">
                            <small class="text-muted d-block">Gắn thẻ</small>
                            <span class="fw-bold text-info">
                                @if (!string.IsNullOrEmpty(Model.ChuDe))
                                {
                                    <text>#@Model.ChuDe</text>
                                }
                                else
                                {
                                    <text>Không có</text>
                                }
                            </span>
                        </div>
                        <div class="col-6">
                            <small class="text-muted d-block">Ngày tạo</small>
                            <span class="fw-bold">@Model.NgayTao.ToString("dd/MM/yyyy HH:mm")</span>
                        </div>
                        <div class="col-6">
                            <small class="text-muted d-block">Cập nhật</small>
                            <span class="fw-bold">@(Model.NgayCapNhat?.ToString("dd/MM/yyyy HH:mm") ?? "Chưa cập nhật")</span>
                        </div>
                    </div>

                    <div class="d-flex gap-2 pt-3">
                        <a asp-action="Edit" asp-route-id="@Model.MaSanPham" class="btn btn-dark btn-lg px-5 rounded-pill shadow-sm">
                            <i class="fas fa-edit me-2"></i>Chỉnh sửa
                        </a>
                        <a asp-action="Delete" asp-route-id="@Model.MaSanPham" class="btn btn-danger btn-lg px-4 rounded-pill">
                            <i class="fas fa-trash-alt me-2"></i>Xóa
                        </a>
                        <a asp-action="Index" class="btn btn-outline-secondary btn-lg px-4 rounded-pill">
                            <i class="fas fa-arrow-left me-2"></i>Quay lại
                        </a>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>