@model ASM_WebBanNuocUong.Models.SanPham
@{ ViewData["Title"] = "Thêm món mới"; }

<div class="container mt-5 mb-5">
    <div class="row justify-content-center">
        <div class="col-md-8">
            <div class="card border-0 shadow-lg rounded-4">
                <div class="card-body p-5">
                    <h3 class="fw-bold mb-4 text-center text-success">Thêm Món Nước Mới</h3>
                    
                    <form asp-action="Create">
                        <div asp-validation-summary="ModelOnly" class="text-danger small mb-3"></div>
                        
                        <div class="row g-3">
                            <div class="col-md-6">
                                <label asp-for="TenSanPham" class="form-label fw-bold small">Tên sản phẩm</label>
                                <input asp-for="TenSanPham" class="form-control rounded-3 border-success-subtle shadow-sm" placeholder="VD: Trà Đào Cam Sả" />
                                <span asp-validation-for="TenSanPham" class="text-danger small"></span>
                            </div>
                            <div class="col-md-6">
                                <label asp-for="Gia" class="form-label fw-bold small">Giá niêm yết</label>
                                <input asp-for="Gia" type="number" class="form-control rounded-3 shadow-sm" placeholder="VD: 45000" />
                                <span asp-validation-for="Gia" class="text-danger small"></span>
                            </div>
                            <div class="col-md-12">
                                <label asp-for="HinhAnh" class="form-label fw-bold small">Đường dẫn ảnh (URL)</label>
                                <input asp-for="HinhAnh" class="form-control rounded-3 shadow-sm" />
                                <span asp-validation-for="HinhAnh" class="text-danger small"></span>
                            </div>
                            <div class="col-md-6">
                                <label asp-for="MaDanhMuc" class="form-label fw-bold small">Phân loại danh mục</label>
                                <select asp-for="MaDanhMuc" class="form-select rounded-3 shadow-sm" asp-items="ViewBag.MaDanhMuc"></select>
                            </div>
                            <div class="col-md-6">
                                <label asp-for="ChuDe" class="form-label fw-bold small">Gắn nhãn (Tag)</label>
                                <input asp-for="ChuDe" class="form-control rounded-3 shadow-sm" placeholder="VD: Best-seller" />
                            </div>
                        </div>

                        <div class="mt-4 pt-3 border-top text-end">
                            <a asp-action="Index" class="btn btn-link text-muted me-3">Quay lại danh sách</a>
                            <button type="submit" class="btn btn-success px-5 rounded-pill shadow">Tạo sản phẩm</button>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>