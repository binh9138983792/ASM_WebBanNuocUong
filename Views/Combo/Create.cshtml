@model ASM_WebBanNuocUong.Models.Combo
@{ ViewData["Title"] = "Tạo Combo"; }

<div class="container mt-5">
    <div class="row justify-content-center">
        <div class="col-md-6">
            <div class="card border-0 shadow-lg rounded-4">
                <div class="card-body p-5">
                    <h3 class="fw-bold mb-4 text-center"><i class="fas fa-magic me-2 text-primary"></i>Thiết kế Combo</h3>
                    <form asp-action="Create">
                        <div asp-validation-summary="ModelOnly" class="text-danger small mb-3"></div>
                        
                        <div class="mb-3">
                            <label asp-for="TenCombo" class="form-label fw-bold small">Tên bộ Combo</label>
                            <input asp-for="TenCombo" class="form-control rounded-3 border-light-subtle shadow-sm" placeholder="VD: Combo Sáng Năng Lượng" />
                            <span asp-validation-for="TenCombo" class="text-danger small"></span>
                        </div>

                        <div class="mb-3">
                            <label asp-for="Gia" class="form-label fw-bold small">Giá ưu đãi (VNĐ)</label>
                            <input asp-for="Gia" type="number" class="form-control rounded-3 border-light-subtle shadow-sm" />
                            <span asp-validation-for="Gia" class="text-danger small"></span>
                        </div>

                        <div class="mb-4">
                            <label asp-for="MoTa" class="form-label fw-bold small">Ghi chú Combo</label>
                            <textarea asp-for="MoTa" class="form-control rounded-3 border-light-subtle shadow-sm" rows="3" placeholder="Gồm những món gì..."></textarea>
                            <span asp-validation-for="MoTa" class="text-danger small"></span>
                        </div>

                        <div class="d-grid gap-2">
                            <button type="submit" class="btn btn-primary btn-lg rounded-pill shadow">Hoàn tất tạo mới</button>
                            <a asp-action="Index" class="btn btn-link text-muted text-decoration-none small">Quay lại danh sách</a>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts { @{await Html.RenderPartialAsync("_ValidationScriptsPartial");} }