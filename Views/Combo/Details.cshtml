@model Combo
@{
    ViewData["Title"] = "Chi tiết Combo";
}

<div class="container mt-5 text-center">
    <div class="card border-0 shadow-sm rounded-4 mx-auto" style="max-width: 600px;">
        <div class="card-body p-5">
            <div class="mb-3 text-info display-4"><i class="fas fa-info-circle"></i></div>
            <h2 class="fw-bold">@Model.TenCombo</h2>
            <hr class="my-4 mx-auto w-25">
            <p class="text-muted mb-4">@Model.MoTa</p>
            <div class="h3 fw-bold text-danger mb-4">@Model.Gia.ToString("N0") VNĐ</div>
            
            <!-- CHI TIẾT SẢN PHẨM -->
            @if (Model.DanhSachChiTietCombo != null && Model.DanhSachChiTietCombo.Any())
            {
                <div class="mb-4">
                    <h5 class="fw-bold mb-3"><i class="fas fa-list me-2 text-success"></i>Sản phẩm trong combo:</h5>
                    <table class="table table-sm">
                        <thead>
                            <tr>
                                <th class="text-start">Sản phẩm</th>
                                <th class="text-center">Số lượng</th>
                                <th class="text-end">Đơn giá</th>
                                <th class="text-end">Thành tiền</th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var item in Model.DanhSachChiTietCombo)
                            {
                                var sanPhamGia = item.SanPham?.Gia ?? 0;
                                var soLuong = item.SoLuong;
                                var thanhTien = sanPhamGia * soLuong;
                                
                                <tr>
                                    <td class="text-start">@(item.SanPham?.TenSanPham ?? "Sản phẩm không tồn tại")</td>
                                    <td class="text-center">@soLuong</td>
                                    <td class="text-end">@sanPhamGia.ToString("N0")đ</td>
                                    <td class="text-end">@thanhTien.ToString("N0")đ</td>
                                </tr>
                            }
                        </tbody>
                    </table>
                </div>
            }
            else
            {
                <div class="alert alert-warning mb-4">
                    <i class="fas fa-exclamation-triangle me-2"></i>Chưa có sản phẩm nào trong combo này.
                </div>
            }
            
            <div class="d-flex gap-2 justify-content-center mt-4">
                <a asp-action="Edit" asp-route-id="@Model.MaCombo" class="btn btn-warning px-4 rounded-pill">
                    <i class="fas fa-edit me-1"></i> Chỉnh sửa
                </a>
                <a asp-action="Index" class="btn btn-outline-secondary px-4 rounded-pill">
                    <i class="fas fa-arrow-left me-1"></i> Quay lại
                </a>
            </div>
        </div>
    </div>
</div>