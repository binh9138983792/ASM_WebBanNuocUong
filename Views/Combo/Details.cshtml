@model ASM_WebBanNuocUong.Models.Combo
<div class="container mt-5 text-center">
    <div class="card border-0 shadow-sm rounded-4 mx-auto" style="max-width: 500px;">
        <div class="card-body p-5">
            <div class="mb-3 text-info display-4"><i class="fas fa-info-circle"></i></div>
            <h2 class="fw-bold">@Model.TenCombo</h2>
            <hr class="my-4 mx-auto w-25">
            <p class="text-muted mb-4">@Model.MoTa</p>
            <div class="h3 fw-bold text-danger mb-5">@Model.Gia.ToString("N0") VNĐ</div>
            
            <div class="d-flex gap-2 justify-content-center">
                <a asp-action="Edit" asp-route-id="@Model.MaCombo" class="btn btn-dark px-4 rounded-pill">Chỉnh sửa</a>
                <a asp-action="Index" class="btn btn-outline-secondary px-4 rounded-pill">Quay lại</a>
            </div>
        </div>
    </div>
</div>