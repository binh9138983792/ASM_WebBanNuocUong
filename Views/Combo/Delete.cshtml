@model ASM_WebBanNuocUong.Models.Combo
<div class="container mt-5 text-center">
    <div class="card border-0 shadow-lg rounded-4 border-bottom border-danger border-5 mx-auto" style="max-width: 450px;">
        <div class="card-body p-5">
            <div class="text-danger mb-3 display-3"><i class="fas fa-trash-alt"></i></div>
            <h4 class="fw-bold">Bạn chắc chắn muốn xóa?</h4>
            <p class="text-muted">Combo <strong>@Model.TenCombo</strong> sẽ bị gỡ bỏ vĩnh viễn.</p>
            
            <form asp-action="Delete" class="mt-4">
                <input type="hidden" asp-for="MaCombo" />
                <button type="submit" class="btn btn-danger w-100 rounded-pill py-2 shadow mb-2">Xóa ngay bây giờ</button>
                <a asp-action="Index" class="btn btn-light w-100 rounded-pill text-muted small">Hủy và quay về</a>
            </form>
        </div>
    </div>
</div>