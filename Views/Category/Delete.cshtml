@model ASM_WebBanNuocUong.Models.DanhMuc

@{
    ViewData["Title"] = "Xác nhận xóa";
}

<div class="container mt-5">
    <div class="row justify-content-center">
        <div class="col-md-6 text-center">
            <div class="card border-0 shadow-lg rounded-4 overflow-hidden">
                <div class="bg-danger py-4 text-white">
                    <i class="fas fa-exclamation-triangle fa-3x mb-2"></i>
                    <h3 class="fw-bold m-0">Xác nhận xóa?</h3>
                </div>
                <div class="card-body p-5">
                    <p class="fs-5 text-muted">Bạn có chắc chắn muốn xóa loại nước này không?</p>
                    <h2 class="fw-bold my-4" style="color: var(--brown-dark);">"@Model.TenDanhMuc"</h2>
                    
                    <div class="alert alert-warning border-0 small">
                        <i class="fas fa-info-circle me-1"></i> Hành động này không thể hoàn tác và có thể ảnh hưởng đến các sản phẩm thuộc loại này.
                    </div>

                    <form asp-action="Delete" class="mt-4">
                        <input type="hidden" asp-for="MaDanhMuc" />
                        <div class="d-grid gap-2">
                            <button type="submit" class="btn btn-danger btn-lg rounded-pill shadow">
                                <i class="fas fa-trash-alt me-2"></i>Đồng ý xóa
                            </button>
                            <a asp-action="Index" class="btn btn-light rounded-pill border">Quay lại an toàn</a>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>