@model ASM_WebBanNuocUong.Models.DanhMuc

@{
    ViewData["Title"] = "Xác nhận xóa";
}

<div class="container mt-5">
    <div class="row justify-content-center">
        <div class="col-md-8">
            @if (TempData["ErrorMessage"] != null)
            {
                <div class="alert alert-danger alert-dismissible fade show" role="alert">
                    <i class="fas fa-exclamation-circle me-2"></i>
                    @TempData["ErrorMessage"]
                    <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
                </div>
            }

            <div class="card border-0 shadow-lg rounded-4 overflow-hidden">
                <div class="bg-danger py-4 text-white">
                    <i class="fas fa-exclamation-triangle fa-3x mb-2"></i>
                    <h3 class="fw-bold m-0">Xác nhận xóa vĩnh viễn?</h3>
                </div>
                <div class="card-body p-5">
                    <p class="fs-5 text-muted">Bạn có chắc chắn muốn xóa VĨNH VIỄN danh mục này không?</p>
                    <h2 class="fw-bold my-4" style="color: var(--brown-dark);">"@Model.TenDanhMuc"</h2>
                    
                    <!-- Hiển thị cảnh báo nếu có sản phẩm -->
                    @if (ViewBag.HasProducts)
                    {
                        <div class="alert alert-danger border-0">
                            <i class="fas fa-ban me-2"></i>
                            <strong>CẢNH BÁO:</strong> Danh mục này có <strong>@ViewBag.ProductCount sản phẩm</strong>. 
                            Bạn không thể xóa danh mục khi còn sản phẩm thuộc danh mục này.
                        </div>
                    }
                    else
                    {
                        <div class="alert alert-warning border-0 small">
                            <i class="fas fa-exclamation-triangle me-2"></i>
                            <strong>LƯU Ý QUAN TRỌNG:</strong> Hành động này sẽ xóa VĨNH VIỄN danh mục và không thể hoàn tác!
                        </div>
                    }

                    <form asp-action="Delete" class="mt-4">
                        <input type="hidden" asp-for="MaDanhMuc" />
                        <div class="d-grid gap-2">
                            @if (!ViewBag.HasProducts)
                            {
                                <button type="submit" class="btn btn-danger btn-lg rounded-pill shadow">
                                    <i class="fas fa-trash-alt me-2"></i>Đồng ý xóa vĩnh viễn
                                </button>
                            }
                            else
                            {
                                <button type="button" class="btn btn-danger btn-lg rounded-pill shadow" disabled>
                                    <i class="fas fa-ban me-2"></i>Không thể xóa (còn sản phẩm)
                                </button>
                            }
                            
                            @if (ViewBag.HasProducts)
                            {
                                <form asp-action="Deactivate" method="post" class="mt-2">
                                    <input type="hidden" name="id" value="@Model.MaDanhMuc" />
                                    <button type="submit" class="btn btn-warning w-100 rounded-pill">
                                        <i class="fas fa-eye-slash me-2"></i>Vô hiệu hóa thay vì xóa
                                    </button>
                                </form>
                            }
                            
                            <a asp-action="Index" class="btn btn-light rounded-pill border mt-2">
                                <i class="fas fa-arrow-left me-2"></i>Quay lại an toàn
                            </a>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>