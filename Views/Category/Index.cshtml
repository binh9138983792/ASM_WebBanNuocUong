@model IEnumerable<ASM_WebBanNuocUong.Models.DanhMuc>

@{
    ViewData["Title"] = "Quản lý Loại nước";
}

<div class="container mt-4">
    <div class="d-flex justify-content-between align-items-center mb-4 p-3 rounded-3 shadow-sm bg-white border-start border-4" style="border-color: var(--brown-dark) !important;">
        <div>
            <h2 class="fw-bold m-0" style="color: var(--brown-dark);">
                <i class="fas fa-list-ul me-2"></i>Danh mục Loại nước
            </h2>
            <small class="text-muted">Quản lý các nhóm sản phẩm trong cửa hàng</small>
        </div>
        <a asp-action="Create" class="btn btn-primary rounded-pill px-4 shadow-sm" style="background-color: var(--brown-dark); border: none;">
            <i class="fas fa-plus-circle me-1"></i> Thêm loại mới
        </a>
    </div>

    <div class="card shadow-sm border-0 rounded-4 overflow-hidden">
        <div class="table-responsive">
            <table class="table table-hover align-middle m-0">
                <thead style="background-color: #f8f5f2;">
                    <tr style="color: var(--brown-dark);">
                        <th class="ps-4 py-3" style="width: 10%;">STT</th>
                        <th class="py-3">Tên Loại nước</th>
                        <th class="py-3 text-center" style="width: 25%;">Hành động</th>
                    </tr>
                </thead>
                <tbody>
                    @{ int stt = 1; }
                    @foreach (var item in Model)
                    {
                        <tr>
                            <td class="ps-4 fw-bold text-muted">@stt</td>
                            <td class="fw-bold" style="color: var(--brown-dark);">
                                @Html.DisplayFor(modelItem => item.TenDanhMuc)
                            </td>
                            <td class="text-center">
                                <div class="btn-group" role="group">
                                    <a asp-action="Edit" asp-route-id="@item.MaDanhMuc" class="btn btn-sm btn-outline-warning rounded-start px-3" title="Sửa">
                                        <i class="fas fa-edit"></i> Sửa
                                    </a>
                                    <a asp-action="Details" asp-route-id="@item.MaDanhMuc" class="btn btn-sm btn-outline-info px-3" title="Chi tiết">
                                        <i class="fas fa-info-circle"></i> Xem
                                    </a>
                                    <a asp-action="Delete" asp-route-id="@item.MaDanhMuc" class="btn btn-sm btn-outline-danger rounded-end px-3" title="Xóa">
                                        <i class="fas fa-trash-alt"></i> Xóa
                                    </a>
                                </div>
                            </td>
                        </tr>
                        stt++;
                    }
                </tbody>
            </table>
        </div>
    </div>
    
    <div class="mt-3 text-end">
        <p class="text-muted small">Tổng cộng: <span class="badge bg-secondary rounded-pill">@Model.Count() danh mục</span></p>
    </div>
</div>

<style>
    /* Hiệu ứng khi di chuột qua hàng trong bảng */
    .table-hover tbody tr:hover {
        background-color: #fff9f4 !important;
        transition: 0.2s;
    }

    /* Tùy chỉnh màu sắc nút bấm */
    .btn-outline-warning { color: #856404; border-color: #ffeeba; }
    .btn-outline-warning:hover { background-color: #ffc107; color: #fff; }

    .btn-outline-info { color: #0c5460; border-color: #bee5eb; }
    .btn-outline-info:hover { background-color: #17a2b8; color: #fff; }

    .btn-outline-danger { color: #721c24; border-color: #f5c6cb; }
    .btn-outline-danger:hover { background-color: #dc3545; color: #fff; }

    .card { border-radius: 15px; }
</style>