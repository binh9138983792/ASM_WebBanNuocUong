@model ASM_WebBanNuocUong.Models.DanhMuc

@{
    ViewData["Title"] = "Chi tiết loại nước";
}

<div class="container mt-5">
    <div class="row justify-content-center">
        <div class="col-md-6">
            <div class="card shadow border-0 rounded-4">
                <div class="card-body p-5">
                    <h6 class="text-uppercase text-muted ls-wide fw-bold">Thông tin danh mục</h6>
                    <h2 class="display-6 fw-bold mb-4" style="color: var(--brown-dark);">@Model.TenDanhMuc</h2>
                    
                    <hr class="my-4">
                    
                    <div class="row mb-4">
                        <div class="col-4 text-muted small fw-bold text-uppercase">Mã định danh:</div>
                        <div class="col-8 fw-bold">#@Model.MaDanhMuc</div>
                    </div>

                    <div class="d-flex gap-2">
                        <a asp-action="Edit" asp-route-id="@Model.MaDanhMuc" class="btn btn-warning px-4 rounded-pill text-white fw-bold">
                            <i class="fas fa-edit me-1"></i>Chỉnh sửa
                        </a>
                        <a asp-action="Index" class="btn btn-outline-secondary px-4 rounded-pill">
                            <i class="fas fa-chevron-left me-1"></i>Quay lại
                        </a>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>