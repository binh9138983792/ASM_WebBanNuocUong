@model ASM_WebBanNuocUong.Models.DonHang

<div class="container py-5 text-center">
    <div class="card shadow-lg border-0 rounded-4 p-5 mx-auto" style="max-width: 600px;">
        <div class="mb-4">
            <i class="fas fa-check-circle text-success" style="font-size: 5rem;"></i>
        </div>
        <h2 class="fw-bold mb-3">Đặt hàng thành công!</h2>
        <p class="text-muted mb-4">Cảm ơn bạn đã tin tưởng Drink Store. Đơn hàng của bạn đang được xử lý.</p>
        
        <div class="bg-light p-3 rounded-3 mb-4 text-start">
            <p class="mb-1"><strong>Mã đơn hàng:</strong> #@Model.MaDonHang.ToString().Substring(0,8).ToUpper()</p>
            <p class="mb-1"><strong>Tổng thanh toán:</strong> <span class="text-danger fw-bold">@Model.TongTien.ToString("N0") VNĐ</span></p>
            <p class="mb-0"><strong>Trạng thái:</strong> @Model.TrangThai</p>
        </div>

        <div class="d-grid gap-2">
            <a asp-controller="Home" asp-action="Index" class="btn btn-outline-dark rounded-pill">Tiếp tục mua sắm</a>
            <a asp-action="History" class="btn btn-dark rounded-pill" style="background-color: #5D4037;">Xem lịch sử mua hàng</a>
        </div>
    </div>
</div>