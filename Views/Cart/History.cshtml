@model List<ASM_WebBanNuocUong.Models.DonHang>
@{
    ViewData["Title"] = "Lịch Sử Đơn Hàng";
}

<div class="container mt-4">
    <h2>Lịch Sử Đơn Hàng Của Bạn</h2>
    
    @if (TempData["ThongBao"] != null)
    {
        <div class="alert alert-success">@TempData["ThongBao"]</div>
    }
    
    @if (Model.Count == 0)
    {
        <div class="alert alert-info">
            Bạn chưa có đơn hàng nào. <a href="/Home/Index">Mua sắm ngay</a>
        </div>
    }
    else
    {
        @foreach (var item in Model)
        {
            <div class="card mb-3 shadow-sm">
                <div class="card-header bg-light d-flex justify-content-between align-items-center">
                    <div>
                        <strong>Đơn hàng #@item.MaDonHang.ToString().Substring(0, 8)</strong>
                        <span class="text-muted ms-3">@item.NgayDat.ToString("dd/MM/yyyy HH:mm")</span>
                    </div>
                    <div>
                        @{
                            var badgeClass = item.TrangThai switch
                            {
                                "Chờ xác nhận" => "bg-warning",
                                "Đang giao" => "bg-primary",
                                "Đã giao" => "bg-success",
                                "Đã hủy" => "bg-danger",
                                _ => "bg-secondary"
                            };
                        }
                        <span class="badge @badgeClass">@item.TrangThai</span>
                    </div>
                </div>
                <div class="card-body">
                    @if (item.DanhSachChiTiet != null)
                    {
                        <table class="table table-sm">
                            <thead>
                                <tr>
                                    <th>Tên sản phẩm</th>
                                    <th>Số lượng</th>
                                    <th>Đơn giá</th>
                                    <th>Thành tiền</th>
                                </tr>
                            </thead>
                            <tbody>
                                @foreach (var ct in item.DanhSachChiTiet)
                                {
                                    <tr>
                                        <td>
                                            @if (ct.LoaiSanPham == "SanPham" && ct.SanPham != null)
                                            {
                                                @ct.SanPham.TenSanPham
                                            }
                                            else if (ct.LoaiSanPham == "Combo" && ct.Combo != null)
                                            {
                                                @ct.Combo.TenCombo <span class="text-muted">(Combo)</span>
                                            }
                                        </td>
                                        <td>@ct.SoLuong</td>
                                        <td>@ct.Gia.ToString("N0") đ</td>
                                        <td>@((ct.SoLuong * ct.Gia).ToString("N0")) đ</td>
                                    </tr>
                                }
                            </tbody>
                        </table>
                    }
                    
                    <div class="d-flex justify-content-between align-items-center mt-3">
                        <div>
                            <strong>Tổng tiền:</strong>
                            <span class="text-danger fw-bold fs-5 ms-2">@item.TongTien.ToString("N0") đ</span>
                        </div>
                        <div>
                            @if (item.TrangThai == "Chờ xác nhận")
                            {
                                <button class="btn btn-sm btn-outline-danger" onclick="cancelOrder('@item.MaDonHang')">Hủy đơn</button>
                            }
                            <a href="/Order/Details/@item.MaDonHang" class="btn btn-sm btn-outline-info ms-2">Chi tiết</a>
                        </div>
                    </div>
                </div>
            </div>
        }
    }
</div>

@section Scripts {
    <script>
        function cancelOrder(orderId) {
            if (confirm('Bạn có chắc muốn hủy đơn hàng này?')) {
                fetch(`/Order/Cancel/${orderId}`, {
                    method: 'POST',
                    headers: {
                        'Content-Type': 'application/json',
                    }
                })
                .then(response => response.json())
                .then(data => {
                    if (data.success) {
                        alert(data.message);
                        location.reload();
                    } else {
                        alert(data.message);
                    }
                });
            }
        }
    </script>
}