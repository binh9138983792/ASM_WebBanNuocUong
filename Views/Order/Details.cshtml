@model ASM_WebBanNuocUong.Models.DonHang

@{
    ViewData["Title"] = "Chi tiết đơn hàng";
}

<div class="container mt-5 mb-5">
    <div class="card shadow rounded-4 border-0 overflow-hidden">
        <div class="card-header bg-white py-3 border-bottom d-flex justify-content-between align-items-center">
            <h4 class="fw-bold mb-0" style="color: #5D4037;">
                <i class="fas fa-file-invoice me-2"></i>Chi tiết đơn hàng #@Model.MaDonHang.ToString().Substring(0, 8).ToUpper()
            </h4>
            <a asp-action="History" class="btn btn-outline-secondary btn-sm rounded-pill px-3">
                <i class="fas fa-arrow-left me-1"></i> Quay lại
            </a>
        </div>
        <div class="card-body p-4">
            <div class="row mb-4">
                <div class="col-md-6">
                    <p class="text-muted mb-1">Ngày đặt hàng</p>
                    <h6 class="fw-bold">@Model.NgayDat.ToString("dd/MM/yyyy HH:mm")</h6>
                </div>
                <div class="col-md-6 text-md-end">
                    <p class="text-muted mb-1">Trạng thái</p>
                    @{
                        var statusClass = Model.TrangThai == "Đã giao" ? "bg-success" : (Model.TrangThai == "Đã hủy" ? "bg-danger" : "bg-warning text-dark");
                    }
                    <span class="badge @statusClass px-3 py-2 rounded-pill">@Model.TrangThai</span>
                </div>
            </div>

            <div class="table-responsive">
                <table class="table align-middle">
                    <thead class="table-light">
                        <tr>
                            <th class="py-3">Sản phẩm / Combo</th>
                            <th class="text-center py-3">Số lượng</th>
                            <th class="text-end py-3">Đơn giá</th>
                            <th class="text-end py-3">Thành tiền</th>
                        </tr>
                    </thead>
                    <tbody>
                        @if (Model.DanhSachChiTiet != null)
                        {
                            foreach (var ct in Model.DanhSachChiTiet)
                            {
                                <tr>
                                    <td>
                                        <div class="d-flex align-items-center">
                                            @* Sửa logic ảnh: Ưu tiên lấy HinhAnh của SP, nếu null thì lấy ảnh mặc định của bạn *@
                                            @{
                                                var imgPath = ct.SanPham != null && !string.IsNullOrEmpty(ct.SanPham.HinhAnh) 
                                                              ? ct.SanPham.HinhAnh 
                                                              : "matcha đá xay.jpg";
                                            }
                                            <img src="/img/@imgPath" width="60" height="60" class="rounded-3 me-3 shadow-sm object-fit-cover" 
                                                 onerror="this.src='/img/matcha đá xay.jpg'">
                                            
                                            <div>
                                                <h6 class="fw-bold mb-0">
                                                    @(ct.LoaiSanPham == "Combo" ? ct.Combo?.TenCombo : ct.SanPham?.TenSanPham)
                                                </h6>
                                                @if(ct.LoaiSanPham == "Combo") {
                                                    <span class="badge bg-info text-white" style="font-size: 0.7rem;">Combo tiết kiệm</span>
                                                } else {
                                                    <small class="text-muted">Thức uống thơm ngon</small>
                                                }
                                            </div>
                                        </div>
                                    </td>
                                    <td class="text-center">@ct.SoLuong</td>
                                    @* Đã dùng ct.Gia để khớp với Model của bạn *@
                                    <td class="text-end">@ct.Gia.ToString("N0")đ</td>
                                    <td class="text-end fw-bold text-dark">@((ct.SoLuong * ct.Gia).ToString("N0"))đ</td>
                                </tr>
                            }
                        }
                    </tbody>
                    <tfoot>
                        <tr>
                            <td colspan="3" class="text-end fw-bold fs-5 py-4">Tổng cộng:</td>
                            <td class="text-end text-danger fw-bold fs-5 py-4">@Model.TongTien.ToString("N0")đ</td>
                        </tr>
                    </tfoot>
                </table>
            </div>
        </div>
    </div>
</div>