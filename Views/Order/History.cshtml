@model IEnumerable<ASM_WebBanNuocUong.Models.DonHang>

@{ ViewData["Title"] = "Lịch sử mua hàng"; }

<div class="container mt-5">
    <div class="row">
        <div class="col-md-3">
            <div class="card border-0 shadow p-3 rounded-4 text-white" style="background-color: #5D4037;">
                <div class="text-center mb-3">
                    <img src="https://ui-avatars.com/api/?name=Thao+Han&background=D7CCC8&color=5D4037" class="rounded-circle border border-3 border-white shadow-sm mb-2" width="90">
                    <h5 class="fw-bold mb-0">Chào, Thảo Hân</h5>
                    <p class="small opacity-75">Thành viên thân thiết</p>
                </div>
                <hr style="border-color: rgba(255,255,255,0.2);">
                <ul class="nav flex-column gap-2">
                    <li class="nav-item">
                        <a class="nav-link text-white p-2 rounded-3 hover-bg" href="#"><i class="fas fa-user me-2"></i> Cá nhân</a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link text-white p-2 rounded-3 bg-white bg-opacity-10 fw-bold" href="#"><i class="fas fa-history me-2"></i> Đơn hàng</a>
                    </li>
                    <li class="nav-item">
                        <a asp-controller="Home" asp-action="Index" class="nav-link text-white p-2 rounded-3 hover-bg">
                            <i class="fas fa-sign-out-alt me-2"></i> Thoát
                        </a>
                    </li>
                </ul>
            </div>
        </div>

        <div class="col-md-9">
            <h3 class="fw-bold mb-4" style="color: #5D4037;">Đơn hàng của bạn</h3>
            
            @if (Model != null && Model.Any())
            {
                @foreach (var item in Model)
                {
                    <div class="card shadow-sm border-0 mb-4 rounded-4 transition-hover">
                        <div class="card-body p-4">
                            <div class="d-flex justify-content-between align-items-center mb-3">
                                @* Cắt ngắn Guid để hiển thị mã đơn đẹp hơn *@
                                <span class="fw-bold text-dark">Mã đơn: <span class="text-primary">#@item.MaDonHang.ToString().Substring(0, 8).ToUpper()</span></span>
                                
                                @{
                                    var statusClass = item.TrangThai == "Đã giao" ? "bg-success text-white" : 
                                                     (item.TrangThai == "Đã hủy" ? "bg-danger text-white" : "bg-warning text-dark");
                                }
                                <span class="badge @statusClass px-3 py-2 rounded-pill shadow-sm">@item.TrangThai</span>
                            </div>

                            <div class="d-flex align-items-center mb-3">
                                <div class="rounded-3 me-3 shadow-sm border d-flex align-items-center justify-content-center bg-light" style="width:70px; height:70px;">
                                    <i class="fas fa-coffee fa-2x text-muted"></i>
                                </div>
                                
                                <div class="flex-grow-1">
                                    <h6 class="mb-1 fw-bold">Đơn hàng ngày @item.NgayDat.ToString("dd/MM/yyyy")</h6>
                                    @* Đã bỏ PhuongThucThanhToan vì Model không có, thay bằng Ghi chú *@
                                    <p class="text-muted small mb-0">Ghi chú: @(item.GhiChu ?? "Không có")</p>
                                </div>
                                <div class="text-end">
                                    <p class="text-muted small mb-0">Tổng thanh toán</p>
                                    <span class="text-danger fw-bold fs-5">@item.TongTien.ToString("N0")đ</span>
                                </div>
                            </div>

                            <div class="d-flex justify-content-end border-top pt-3">
                                <a asp-controller="Order" asp-action="Details" asp-route-id="@item.MaDonHang" class="btn btn-outline-dark rounded-pill px-4">
                                    <i class="fas fa-eye me-1"></i> Xem chi tiết
                                </a>
                            </div>
                        </div>
                    </div>
                }
            }
            else
            {
                <div class="text-center py-5">
                    <i class="fas fa-box-open fa-3x text-muted mb-3"></i>
                    <p class="text-muted">Bạn chưa có đơn hàng nào.</p>
                    <a asp-controller="Home" asp-action="Index" class="btn btn-primary rounded-pill px-4">Mua sắm ngay</a>
                </div>
            }
        </div>
    </div>
</div>

<style>
    .transition-hover { transition: all 0.3s ease; }
    .transition-hover:hover { transform: translateY(-5px); box-shadow: 0 10px 20px rgba(0,0,0,0.1) !important; }
    .hover-bg:hover { background-color: rgba(255,255,255,0.1); text-decoration: none; }
    .nav-link:hover { color: white; }
</style>