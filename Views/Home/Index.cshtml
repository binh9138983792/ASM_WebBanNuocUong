@model IEnumerable<ASM_WebBanNuocUong.Models.SanPham>

@{
    ViewData["Title"] = "Trang Chủ";
}

<div class="p-5 mb-5 rounded-4 shadow-lg text-center text-white" 
     style="background: linear-gradient(rgba(0,0,0,0.6), rgba(0,0,0,0.6)), 
            url('https://images.unsplash.com/photo-1544145945-f904253d0c7b?auto=format&fit=crop&w=1350&q=80'); 
            background-size: cover; background-position: center; min-height: 400px; display: flex; flex-direction: column; justify-content: center;">
    
    <h1 class="display-2 fw-bold mb-3 animate__animated animate__fadeInDown">Drink Store</h1>
    <p class="fs-4 mb-4 opacity-75 animate__animated animate__fadeInUp">Hương vị thuần khiết - Trải nghiệm tinh tế trong từng giọt nước</p>
    
    <div class="d-flex gap-3 justify-content-center animate__animated animate__zoomIn">
        <a href="#menu" class="btn btn-light btn-lg rounded-pill fw-bold px-4 shadow">
            <i class="fas fa-coffee me-2"></i>Khám phá Menu ngay
        </a>
    </div>
</div>

<div class="container pb-5" id="menu">
    <div class="d-flex justify-content-between align-items-center mb-4">
        <h2 class="fw-bold mb-0"><i class="fas fa-leaf text-success me-2"></i>Danh sách món nước</h2>
        <div class="text-muted">Giao hàng nhanh trong 15 phút</div>
    </div>

    <div class="row row-cols-1 row-cols-md-4 g-4">
        @if (Model != null && Model.Any())
        {
            foreach (var sp in Model)
            {
                <div class="col">
                    <div class="card h-100 border-0 shadow-sm rounded-4 overflow-hidden card-hover">
                        <img src="/img/@(string.IsNullOrEmpty(sp.HinhAnh) ? "matcha đá xay.jpg" : sp.HinhAnh)" 
                             class="card-img-top" style="height: 220px; object-fit: cover;"
                             onerror="this.src='/img/matcha đá xay.jpg'">
                        <div class="card-body text-center">
                            <h5 class="fw-bold text-dark">@sp.TenSanPham</h5>
                            <p class="text-danger fw-bold fs-5">@sp.Gia.ToString("N0") VNĐ</p>
                            <a asp-controller="Cart" asp-action="AddProductToCart" asp-route-id="@sp.MaSanPham" 
                               class="btn btn-dark w-100 rounded-pill py-2 shadow-sm">
                                <i class="fas fa-cart-plus me-1"></i> Thêm vào giỏ
                            </a>
                        </div>
                    </div>
                </div>
            }
        }
        else
        {
         
            var demoItems = new[] {
                new { Name = "Cà phê muối", Price = 35000, Img = "cà phê muối.jpg" },
                new { Name = "Matcha đá xay", Price = 45000, Img = "matcha đá xay.jpg" },
                new { Name = "Trà sữa trân châu", Price = 35000, Img = "trà sữa trân châu.jpg" },
                new { Name = "Nước ép cam", Price = 40000, Img = "nước ép cam.jpg" }
            };

            foreach (var x in demoItems)
            {
                <div class="col">
                    <div class="card h-100 border-0 shadow-sm rounded-4 opacity-75">
                        <img src="/img/@x.Img" class="card-img-top" style="height: 220px; object-fit: cover;">
                        <div class="card-body text-center">
                            <h5 class="fw-bold">@x.Name</h5>
                            <p class="text-danger fw-bold">@x.Price.ToString("N0") VNĐ</p>
                            <button class="btn btn-secondary w-100 rounded-pill" disabled>Sản phẩm mẫu</button>
                        </div>
                    </div>
                </div>
            }
        }
    </div>
</div>

<style>
    /* Hiệu ứng khi di chuột vào thẻ sản phẩm */
    .card-hover {
        transition: transform 0.3s ease, shadow 0.3s ease;
    }
    .card-hover:hover {
        transform: translateY(-10px);
        box-shadow: 0 1rem 3rem rgba(0,0,0,.175) !important;
    }
    html {
        scroll-behavior: smooth; 
    }
</style>