@model ASM_WebBanNuocUong.Models.NguoiDung

@{
    ViewData["Title"] = "Đăng Nhập";
}

<div class="container mt-5">
    <div class="row justify-content-center">
        <div class="col-md-4 shadow-sm p-4 rounded-3 border">
            <h2 class="text-center mb-4">Đăng Nhập</h2>

            
            <form asp-controller="Account" asp-action="Login" method="post">
                
              
                @if (ViewBag.Loi != null)
                {
                    <div class="alert alert-danger">@ViewBag.Loi</div>
                }

                <div class="mb-3">
                    <label class="form-label">Email</label>
                    <input type="email" name="email" class="form-control" placeholder="Nhập email của bạn" required>
                </div>

                <div class="mb-3">
                    <label class="form-label">Mật khẩu</label>
              
                    <input type="password" name="password" class="form-control" placeholder="Nhập mật khẩu" required>
                </div>

                <div class="d-grid mb-3">
                    <button type="submit" class="btn btn-dark">Đăng Nhập</button>
                </div>

                <div class="text-center">
                
                    <a asp-controller="Account" asp-action="LoginGoogle" class="btn btn-outline-danger w-100 mb-2">
                        Đăng nhập bằng Google
                    </a>
                    
                    <p class="mt-3">
                        Chưa có tài khoản? <a asp-controller="Account" asp-action="Register" class="text-primary text-decoration-none">Đăng ký ngay</a>
                    </p>
                </div>
            </form>
        </div>
    </div>
</div>